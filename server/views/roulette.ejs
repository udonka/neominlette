<!DOCTYPE HTML>
<html>
<% include head %>

<body id="body" onmousedown="return false;">

  <% include top %>


  <div id="wrapper" class="container"> 
    <div id="rouletteContainer">
      <!-- 描画用フィールド -->
      <svg id="rouletteArea" 
      xmlns="http://www.w3.org/2000/svg"
      xmlns:xlink="http://www.w3.org/1999/xlink">
    </svg>

    <div class="btn-group btn-group-justified" role="group" aria-label="...">
      <div class="btn-group" role="group">
        <!-- Button trigger modal -->
        <button type="button" class="btn btn-primary btn-lg" data-toggle="modal" data-target="#myModal">シェア</button>
      </div>
      <div class="btn-group" role="group">
        <a href="javascript:alert('実装中です')" class="btn btn-default btn-lg text-center">MP</a>
      </div>
      <div class="btn-group" role="group">
        <a href="javascript:alert('実装中です')" class="btn btn-default btn-lg text-center">編集</a>
      </div>
    </div>




    <!-- Modal -->
    <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            <h4 class="modal-title" id="myModalLabel">ルーレットをシェア</h4>
          </div>
          <div class="modal-body">
            <p class="text-center"> <%- QRURL %> </p>

            <img class="img-responsive" style="margin: 0 auto;" src="http://www.it-top.biz/qr/qrapi/?d=<%- QRURL %>&s=8&q=4">
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
          </div>
        </div>
      </div>
    </div>

  </div>
</div>



<script src="/components/jquery-qrcode/jquery.qrcode.min.js"></script>

<script>
  $('#qrcode').qrcode(location.href);
</script>
<script>
  <% if(labels){ %>
    var roulette_id = "<%= roulette_id %>";
    var labels = <%- JSON.stringify(labels) %>;
    <% } %>
  </script>
  <script src="/js/modal.js"></script>
  <script charset="UTF-8" type="text/javascript" src="/js/main.js"> </script>
</body>
</html>


