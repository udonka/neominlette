<!DOCTYPE HTML>
<html>
<% include head %>
<body>
<% include top %>
<div id="wrapper" class="container"> 
  <div class="m-content">
    <h2><%= user_name %> さんのルーレット</h2>
    <div>
      <form action="/home/create" method="GET">
        <div class="form-group">
        <button type="submit" class="btn btn-default" >ルーレットを作る</button>
      </form>
    </div>

    <table class="table table-hover">
      <thead>
        <tr>
          <th>#</th>
          <th>ルーレット名</th>
        </tr>
      </thead>
      <% var count = 1; %>
      <% rouletteGroups.forEach(function(rouletteGroup){ %>
        <tr>
          <th><span class="h4"><%= count %></span></th>
          <th><a class="h4" href="/roulette/<%= rouletteGroup.roulettes[0] %>"><%= rouletteGroup.name %></a></th>
        </tr>
      <% count++ %>
      <% }); %>
    </table>
  </div>
</div>

<!-- fundamental -->
  <script charset="UTF-8" type="text/javascript" src="/js/lib/jquery-2.1.1.min.js"></script>
<!--bootstrap-->
  <script charset="UTF-8" type="text/javascript" src="/components/bootstrap/dist/js/bootstrap.min.js"></script>

</body>
</html>
