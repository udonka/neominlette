<!DOCTYPE HTML>
<html>
<% include head %>
<body>
<% include top %>
<div id="wrapper" class="container"> 
  <div class="m-content">
    <h2><%= locals.user %></h2>
    <div>
      <form action="/home/create" method="GET">
        <div class="form-group">
        <button type="submit" class="btn btn-default" >ルーレットを作る</button>
      </form>
    </div>

    <table class="table table-hover">
      <thead>
        <tr>
          <th>#</th>
          <th>ルーレット名</th>
        </tr>
      </thead>
      <% var count = 1; %>
      <% rouletteGroups.forEach(function(rouletteGroup){ %>
        <tr>
          <th><span class="h4"><%= count %></span></th>
          <th><a class="h4" href="/roulette/<%= rouletteGroup.roulettes[0] %>"><%= rouletteGroup.name %></a></th>
        </tr>
      <% count++ %>
      <% }); %>
    </table>
  </div>
</div>

<script>
</script>

</body>
</html>
